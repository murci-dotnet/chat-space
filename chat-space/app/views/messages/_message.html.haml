.chat-main__body__message
  %div{data: {message: {id: message.id}}}
  .chat-main__body__message__list
    = message.user.name
  .chat-main__body__message__time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat-main__body__message-text
  - if message.body.present?
    %p.chat-main__body__message-text__content
      = message.body
  = image_tag message.image.url, class: 'chat-main__body__message-text__image' if message.image.present?