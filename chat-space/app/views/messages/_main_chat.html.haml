.chat-main
  .chat-main__header
    .chat-main__header__left
      = @group.name
      %li.chat-main__header__left__member
        Member :
      %li.chat-main__header__left__name
        = current_user.name
    .chat-main__header__right
      %li.chat-main__header__right-item
        = link_to edit_group_path(@group) ,class: "editlink" do
          Edit
  
  .chat-main__body
    = render @messages

  .chat-main__footer
    .chat-main__footer__box
      = form_for [@group, @message] do |f|
        .chat-main__footer__box__left
          = f.text_field :body, class: 'chat-main__footer__box__left__message',placeholder: 'type a message'
          %label{class:"chat-main__footer__box__left__icon"}
            %i.fa.fa-image
            %input{type:"file"}
      %input{type:"submit", class:"chat-main__footer__box__send"}